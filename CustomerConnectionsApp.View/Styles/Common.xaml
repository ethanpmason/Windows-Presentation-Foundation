<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!--Colors-->
    <Color x:Key="White">#FFFFFF</Color>
    <Color x:Key="LightGray">#d9d9d9</Color>
    <Color x:Key="Gray">#a6a6a6</Color>
    <Color x:Key="DarkGray">#737373</Color>
    <Color x:Key="Red">#FF1616</Color>
    
    <!--Brushes-->
    <SolidColorBrush x:Key="WhiteBrush" Color="{StaticResource White}"/>
    <SolidColorBrush x:Key="LightGrayBrush" Color="{StaticResource LightGray}"/>
    <SolidColorBrush x:Key="GrayBrush" Color="{StaticResource Gray}"/>
    <SolidColorBrush x:Key="DarkGrayBrush" Color="{StaticResource DarkGray}"/>
    <SolidColorBrush x:Key="RedBrush" Color="{StaticResource Red}"/>

</ResourceDictionary>